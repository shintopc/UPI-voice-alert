<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/gray_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Voice Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.UPIalert.Card"
            android:layout_marginBottom="16dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/voice_settings"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/text_primary"/>

                <!-- Master Toggle -->
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_voice_enabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Voice Alerts"
                    android:checked="true"
                    android:layout_marginBottom="8dp"/>

                <!-- Schedule Toggle -->
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_schedule_enabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Schedule Mute Time"
                    android:checked="false"
                    android:layout_marginBottom="8dp"/>

                <!-- Schedule Layout -->
                <LinearLayout
                    android:id="@+id/layout_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Mute Start"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginEnd="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_time_start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:text="22:00"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Mute End"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_time_end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:text="06:00"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/text_secondary"/>

                <Spinner
                    android:id="@+id/spinner_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:minHeight="48dp"
                    android:spinnerMode="dropdown"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_test_voice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/test_voice"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>

                <TextView
                    android:id="@+id/tv_speed_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voice Speed: 1.0x"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0.5"
                    android:valueTo="2.0"
                    android:stepSize="0.1"
                    android:value="1.0"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Payment Settings (For QR) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.UPIalert.Card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receive Payments Setup"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/text_primary"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your UPI ID (VPA)"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_upi_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your Name (Payee Name)"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_payee_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save_upi_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Details"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Simulation Section -->


        <!-- Battery Optimization -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             style="@style/Widget.UPIalert.Card"
            android:layout_marginBottom="16dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/battery_optim_title"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/text_primary"/>
                    
                <TextView
                    android:id="@+id/tv_battery_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: Checking..."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/text_secondary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/battery_optim_desc"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/text_secondary"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_fix_battery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fix Battery Optimization"
                    android:visibility="gone"
                    style="@style/Widget.Material3.Button.TonalButton"
                    app:backgroundTint="@color/purple_200"
                    app:icon="@android:drawable/ic_dialog_alert"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Maintenance & Danger Zone -->
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_diagnostic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Diagnostic"
                android:textColor="@color/black"
                app:backgroundTint="#FFD54F"
                app:icon="@android:drawable/ic_menu_manage"
                app:iconTint="@color/black"
                style="@style/Widget.Material3.Button.TonalButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Factory Reset"
                app:backgroundTint="@color/red_danger"/>
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by Shinto PC   ðŸ“ž ðŸ’¬   +91 941992723"
            android:textAlignment="center"
            android:padding="16dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>
